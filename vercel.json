{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/server.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/dist/assets/$1"
    },
    {
      "src": "^/favicon.ico",
      "dest": "/dist/favicon.ico"
    },
    {
      "src": "^/LogoVerzelHorizontal.svg",
      "dest": "/dist/LogoVerzelHorizontal.svg"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html"
    }
  ]
}